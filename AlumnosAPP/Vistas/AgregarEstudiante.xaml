<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AlumnosAPP.Vistas.AgregarEstudiante">

    <StackLayout Padding="10">
        <!-- Campos de entrada para la información del estudiante -->
        <Entry x:Name="nombreEntry" Placeholder="Nombre" />
        <Entry x:Name="correoEntry" Placeholder="Correo" />
        <Entry x:Name="edadEntry" Placeholder="Edad" Keyboard="Numeric" />
        <Entry x:Name="cursoEntry" Placeholder="Curso" />
        <Switch x:Name="activoSwitch" />
        <Label Text="Activo" />

        <!-- Botón para guardar el estudiante -->
        <Button Text="Guardar" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>
