<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AlumnosAPP.ListarAlumnos">

    <StackLayout Padding="10">
        <SearchBar x:Name="searchBar" Placeholder="Buscar por nombre" TextChanged="OnSearchBarTextChanged" />
        <CollectionView x:Name="studentsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Nombre}" />
                        <Label Text="{Binding Correo}" />
                        <Label Text="{Binding Curso}" />
                        <Label Text="{Binding Edad}" />
                        <Label Text="{Binding Activo}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Agregar Estudiante" Clicked="OnAddStudentClicked" />
    </StackLayout>
</ContentPage>
