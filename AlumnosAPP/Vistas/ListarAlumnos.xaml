<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AlumnosAPP.Vistas.ListarAlumnos">

    <StackLayout Padding="10">
        <!-- Evento TextChanged enlazado correctamente -->
        <SearchBar x:Name="searchBar" 
                   Placeholder="Buscar por nombre" 
                   TextChanged="OnSearchBarTextChanged" />

        <!-- CollectionView que muestra la lista de estudiantes -->
        <CollectionView x:Name="studentsCollectionView" ItemsSource="{Binding FilteredStudents}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Nombre}" />
                        <Label Text="{Binding Correo}" />
                        <Label Text="{Binding Curso}" />
                        <Label Text="{Binding Edad}" />
                        <Label Text="{Binding Activo}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BotÃ³n para agregar un nuevo estudiante -->
        <Button Text="Agregar Estudiante" Clicked="OnAddStudentClicked" />
    </StackLayout>
</ContentPage>
